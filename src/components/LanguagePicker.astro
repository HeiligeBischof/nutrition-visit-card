---
const { lang } = Astro.props; // Получаем текущий язык страницы
---

<div class="flex gap-2 text-sm font-bold">
  <a href="/ru" class={`px-2 py-1 rounded transition ${lang === 'ru' ? 'bg-green-600 text-white' : 'text-stone-500 hover:text-green-600'}`}>
    RU
  </a>
  <span class="text-stone-300">|</span>
  <a href="/en" class={`px-2 py-1 rounded transition ${lang === 'en' ? 'bg-green-600 text-white' : 'text-stone-500 hover:text-green-600'}`}>
    EN
  </a>
  <span class="text-stone-300">|</span>
  <a href="/de" class={`px-2 py-1 rounded transition ${lang === 'de' ? 'bg-green-600 text-white' : 'text-stone-500 hover:text-green-600'}`}>
    DE
  </a>
</div>